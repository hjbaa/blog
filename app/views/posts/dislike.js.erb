if (document.getElementById('dislike-post-' + '<%= @post.id %>').firstChild.className.includes("fill")) {
    document.getElementById('dislike-post-' + '<%= @post.id %>').firstChild.className = 'bi bi-hand-thumbs-up'

    document.getElementById('post-' + '<%= @post.id %>' + '-dislikes')
        .innerText = Number(document.getElementById('post-' + '<%= @post.id %>' + '-dislikes').innerText) - 1
} else {
    if (document.getElementById('like-post-' + '<%= @post.id %>').firstChild.className.includes("fill")) {
        document.getElementById('like-post-' + '<%= @post.id %>').firstChild.className = 'bi bi-hand-thumbs-up'
        document.getElementById('post-' + '<%= @post.id %>' + '-likes')
            .innerText = Number(document.getElementById('post-' + '<%= @post.id %>' + '-likes').innerText) - 1
    }

    document.getElementById('dislike-post-' + '<%= @post.id %>').firstChild.className = 'bi bi-hand-thumbs-up-fill'

    document.getElementById('post-' + '<%= @post.id %>' + '-dislikes')
        .innerText = Number(document.getElementById('post-' + '<%= @post.id %>' + '-dislikes').innerText) + 1
}
